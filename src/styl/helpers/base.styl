body {
  background-color : #FFF;
  min-width : 320px;
  overflow-x : hidden;
  font-family : Arial, Helvetica, sans-serif;
}

*,
*:after,
*:before {
  margin : 0;
  padding : 0;
  -webkit-box-sizing : border-box;
  -moz-box-sizing : border-box;
  box-sizing : border-box;
  -ms-box-sizing : border-box;
  -o-box-sizing : border-box;
}

.img-full {
  width : 100%;
  height : 100%;
  display : block;
}

.left {
  float : left;
}

.right {
  float : right;
}

.container {
  width : 1200px;
  margin : 0 auto;
  padding : 0 15px;
}

.relative {
  position : relative;
}